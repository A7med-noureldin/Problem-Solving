#include <bits/stdc++.h>
 
#define ll long long
#define ld long double
#define st first
#define nd second
#define pb push_back
#define fin(a, n) for(int i = a; i < n; i++)
#define fjn(a, n) for(int j = a; j < n; j++)
#define all(a) a.begin(),a.end()
#define allr(a) a.rbegin(),a.rend()
#define FAST ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr)
 
using namespace std;
 
void solve() {
    ll n; cin >> n;
    vector<ll> v(n);
    fin(0,n)cin >> v[i];
    ll ans = 0;
    fin(0,n-1) {
        if(v[i] > v[i+1]) {
            ans += (v[i]-v[i+1]);
            v[i+1] = v[i];
        }
    }
    cout << ans << '\n';
}
 
int main() {
    FAST;
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
#endif
    ll tt = 1; //cin >> tt;
    while (tt--) {
        solve();
    }
    return 0;
}
