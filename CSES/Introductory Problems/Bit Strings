#include <bits/stdc++.h>
 
#define ll long long
#define ld long double
#define st first
#define nd second
#define pb push_back
#define fin(a, n) for(int i = a; i < n; i++)
#define fjn(a, n) for(int j = a; j < n; j++)
#define all(a) a.begin(),a.end()
#define allr(a) a.rbegin(),a.rend()
#define FAST ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr)
 
using namespace std;
 
const ll mod = 1e9 + 7;
 
ll FastPow(ll b, ll p) {
    ll ret = 1;
    while(p > 0) {
        if(p&1)ret *= b;
        b = b*b;
        p /= 2;
    }
    return  ret;
}
 
void solve() {
    ll n; cin >> n;
    ll ans = 1;
    for(int i  = 0; i < n; i++) {
        ans = 2*ans%((int)mod);
    }
   cout << ans << '\n';
}
 
int main() {
    FAST;
#ifndef ONLINE_JUDGE
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
#endif
    ll tt = 1; //cin >> tt;
    while (tt--) {
        solve();
    }
    return 0;
}
