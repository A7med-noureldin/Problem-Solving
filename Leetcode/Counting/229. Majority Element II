//Author: Ahmed Noureldin
//Problem link: https://leetcode.com/problems/majority-element-ii/

//Tags: Divide and Conquer, Sorting, Counting(Boyer-Moore Voting algo.)

class Solution {
public:
    vector<int> majorityElement(vector<int>& nums) {
        int ele1 = 0, ele2 = 0, count1 = 0, count2 = 0;
        vector<int> ans;
        for(auto i : nums){
            if(i == ele1)
                count1++;
            else if(i == ele2)
                count2++;
            else if(count1 == 0)
                ele1 = i, count1++;
            else if(count2 == 0)
                ele2 = i, count2++;
            else
                count1--, count2--;
        }
        
        count1 = count2 = 0;
        for(auto i : nums){
            if(i == ele1)count1++;
            else if(i == ele2)count2++;
        }
        if(count1 > nums.size()/3)ans.push_back(ele1);
        if(count2 > nums.size()/3)ans.push_back(ele2);
        return ans;
    }
};
