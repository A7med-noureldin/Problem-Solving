//Author: Ahmed Noureldin
//Problem link: https://leetcode.com/problems/minimum-domino-rotations-for-equal-row/

//Tags: Greedy

class Solution {
public:
    int solve(int x, vector<int>& tops, vector<int>& bottoms) {
        int rotTop = 0, rotBottom = 0;
        for (int i = 0; i < tops.size(); i++) {
            if (tops[i] != x && bottoms[i] != x)
                return -1;
            else if (tops[i] != x)
                rotTop++;
            else if (bottoms[i] != x)
                rotBottom++;
        }
        return min(rotTop, rotBottom);
    }
    int minDominoRotations(vector<int>& tops, vector<int>& bottoms) {
        int ans = solve(tops[0], tops, bottoms);
        if(ans != -1)
            return ans;
        return solve(bottoms[0], tops, bottoms);
    }
};
